<Page x:ConnectionId='1'
    x:Class="ReyukoProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >
 
    <Grid x:ConnectionId='2'
        x:Name="LayoutRoot"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <NavigationView x:ConnectionId='3' x:Name="NavView"
                        OpenPaneLength="160"
                        AlwaysShowHeader="True" 
                        IsSettingsVisible="False"
                                                                
                                                             
                                                                                                           
                        >
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='4' 
                                                                           
                    x:Name="DashBoardMenuItem" >
                    <StackPanel x:ConnectionId='31' 
                        Margin="-5,0,0,0"
                                                               
                        Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/dashboard_drawer.png"/>
                        <TextBlock x:ConnectionId='32'                                       Foreground="White"/>
                    </StackPanel>
                    
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='5' 
                                                                   
                    x:Name="SalesMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/sales_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='30'                               Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='6' 
                                                                            
                    x:Name="PurchasingMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/purchasing_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='29'                                        Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='7' 
                                                                         
                    x:Name="ProductMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/sales_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='28'                                     Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='8' 
                                                                           
                    x:Name="InventoryMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/inventory_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='27'                                       Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='9' 
                                                                         
                    x:Name="PaymentMenuItem">
                    <StackPanel Margin="-5,0,0,0"  Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/payment_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='26'                                     Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='10' 
                                                                            
                    x:Name="AccountingMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/accounting_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='25'                                        Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='11' 
                                                                         
                    x:Name="ContactMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/contact_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='24'                                     Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='12' 
                                                                           
                    x:Name="ReportingMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/reporting_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='23'                                       Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='13' 
                                                                          
                    x:Name="DocumentMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/document_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='22'                                      Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='14' 
                                                                          
                    x:Name="CalendarMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/calendar_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='21'                                      Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='15' 
                                                                     
                    x:Name="POSMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/pos_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='20'                                 Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='16' 
                                                                          
                    x:Name="ServicesMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/services_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='19'                                      Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='17' 
                                                                          
                    x:Name="SettingsMenuItem">
                    <StackPanel Margin="-5,0,0,0" Orientation="Horizontal" Spacing="10">
                        <Image 
                            Width="20"
                           Source="Assets/Icons/setting_drawer.png"
                           Stretch="Uniform"/>
                        <TextBlock x:ConnectionId='18'                                      Foreground="White"/>
                    </StackPanel>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <SplitView x:ConnectionId='33'
                    x:Name="SubMenuSplitView"
                    DisplayMode="Inline"
                    IsPaneOpen="False"
                    OpenPaneLength="220">
                <SplitView.Pane>
                    <ListView x:ConnectionId='34'
                            x:Name="lvNavigationMenuSub"
                            Background="#07273c"
                            IsItemClickEnabled="True" 
                            >
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="15" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:ConnectionId='36' Grid.Column="0" Text="{Binding Title}" Foreground="White"                                    HorizontalAlignment="Stretch" />
                                    <Image x:ConnectionId='37' Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        Tag="{Binding Title}"
                                        Source ="{Binding IconPath}"
                                        Width="15"                                    />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </SplitView.Pane>
                <SplitView.Content>
                    <Frame x:ConnectionId='38'
                        x:Name="frame"
                        Margin="20,0,0,0"
                                                       >    
                        <Frame.ContentTransitions>
                            <TransitionCollection>
                                <NavigationThemeTransition>
                                    <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                        <EntranceNavigationTransitionInfo />
                                    </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                </NavigationThemeTransition>
                            </TransitionCollection>
                        </Frame.ContentTransitions>
                    </Frame>
                </SplitView.Content>
            </SplitView>
            
        </NavigationView>


    </Grid>
</Page>

