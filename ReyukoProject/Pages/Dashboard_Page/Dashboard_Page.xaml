<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReyukoProject.Pages.Dashboard_Page"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Custom="using:Microsoft.Toolkit.Uwp.UI.Controls"
    x:Class="ReyukoProject.Pages.Dashboard_Page.Dashboard_Page"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Custom:DockPanel HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
            <StackPanel Height="50" Custom:DockPanel.Dock="Top">
                <TextBlock
                    x:Name="PageTitle"
                    Style="{StaticResource PageTitleTextBlockStyle}"
                    Text="Customers" />
            </StackPanel>
            <StackPanel Width="100" Custom:DockPanel.Dock="Left" Background="Red"></StackPanel>
            <StackPanel Height="100" Custom:DockPanel.Dock="Bottom" Background="Green"></StackPanel>
            <StackPanel Width="100" Custom:DockPanel.Dock="Right" Background="Blue"></StackPanel>
        </Custom:DockPanel>
    </Grid>
</Page>
